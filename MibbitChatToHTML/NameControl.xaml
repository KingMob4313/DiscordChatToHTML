<Window x:Class="MibbitChatToHTML.NameControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MibbitChatToHTML"
        mc:Ignorable="d"
        Title="NameControl" Height="350" Width="500">
    <Grid>
        <DataGrid x:Name="NameDataGrid"  HorizontalAlignment="Stretch"  HorizontalContentAlignment="Stretch" ColumnWidth="*" AutoGenerateColumns="True" VerticalAlignment="Top" Margin="10,10,12,0" Height="267"/>
        <Button x:Name="NameDialogSave"  Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="405,289,0,0" Click="NameDialogSave_Click" Foreground="White" Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>
        <Button Content="Exit" x:Name="NameDialogExit"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,289,0,0" Click="NameDialogExit_Click"/>

    </Grid>
</Window>
